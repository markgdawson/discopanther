!!!
%html
  %head
    %meta{:content => "Disco Panther merge disco and funk for a dance floor thumping party! This incredible 10-piece funk group who will whip the dance floor into a frenzy. ", :name => "description"}/
    %meta{:content => "disco, funk, Swansea, Cardiff, band, music, wedding, party, south, wales", :name => "keywords"}/
    %meta{:content => "Mark Dawson", :name => "author"}/
    %meta{:charset => "utf-8"}/

    / Always force latest IE rendering engine or request Chrome Frame
    %meta{:content => "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}/

    / Use title if it's in the page YAML frontmatter
    %title= data.page.title || "Disco Panther"

    %script{:src => "http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js", :type => "text/javascript"}

    = stylesheet_link_tag "all"
    = javascript_include_tag  "all"
    
    :javascript
      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', 'UA-37504266-1']);
      _gaq.push(['_setDomainName', 'discopanther.com']);
      _gaq.push(['_setAllowLinker', true]);
      _gaq.push(['_trackPageview']);
      
      (function() {
        var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
        ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
        var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
      })();

  %body{:class => page_classes}
    #header
      %h1#main-heading
        Disco Panther
      %ul#menu
        %li#menu-fb
          %a{:href => "http://www.facebook.com/discopanther", :target => "_blank"} Facebook Page
        %li#menu-twitter
          %a{:href => "http://twitter.com/itsdiscopanther", :target => "_blank"} Twitter Page
        %li#menu-soundcloud
          %a{:href => "https://soundcloud.com/discopanther-1", :target => "_blank"} Soundcloud Page
          - [ "index.html", "band.html", "gigs.html", "media.html", "gallery.html", "contact.php" ].each_with_index do |page,index|
            %li{:id => "menu-#{index+1}", :class => ( current_page.path == page) ? "selected" : ""}
              = link_to page, "/#{page}", :class => 'menuitem'
    #current
    #content
      = yield
    .clearboth
    #footer